    <!--DARK COLOR THEME-->

    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
    <!--selection controls.-->
    <color name="color_primary">#ff8a80</color>
    <color name="color_primary_variant">#ff5252</color>
    <color name="color_secondary">#ff8a80</color>
    <color name="color_secondary_variant">#ff5252</color>

    <color name="color_primary_green">#00c853</color>
    <color name="color_primary_variant_green">#00a300</color>
    <color name="color_secondary_green">#64DD17</color>
