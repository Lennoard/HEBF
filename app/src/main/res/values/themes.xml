<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorWarning</item>

        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline3">@style/TextAppearance.HEBF.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.HEBF.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.HEBF.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.HEBF.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.HEBF.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.HEBF.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.HEBF.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.HEBF.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.HEBF.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.HEBF.Caption</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AppTheme.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AppTheme.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AppTheme.LargeComponent</item>

        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/AppMaterialDialog</item>
        <item name="materialButtonStyle">@style/AppMaterialButton</item>
        <item name="materialCardViewStyle">@style/AppMaterialCardView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <!-- Theme for activities with colored action bar -->
    <style name="ColoredActivity" parent="AppTheme" />

    <style name="TranslucentActivity" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>