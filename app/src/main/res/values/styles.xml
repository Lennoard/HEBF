<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="ColoredSelectableItemTheme">
        <item name="colorControlHighlight">#D0BFCF</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemBackground.Colored" parent="SelectableItemBackground">
        <item name="android:theme">@style/ColoredSelectableItemTheme</item>
    </style>

    <style name="SelectableItemBackgroundBorderless" parent="SelectableItemBackground">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SelectableItemBackgroundBorderless.Colored" parent="SelectableItemBackgroundBorderless">
        <item name="android:theme">@style/ColoredSelectableItemTheme</item>
    </style>

    <style name="AppMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/AppTheme.MaterialAlertDialog</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.AppTheme.MediumComponent</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/TextAppearance.HEBF.MaterialAlertDialog.TitlePanel
        </item>
        <item name="materialAlertDialogBodyTextStyle">
            @style/TextAppearance.HEBF.MaterialAlertDialog.BodyText
        </item>
        <item name="buttonBarButtonStyle">@style/AppTheme.MaterialAlertDialog.Button.Negative</item>
        <item name="buttonBarPositiveButtonStyle">
            @style/AppTheme.MaterialAlertDialog.Button.Positive
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/AppTheme.MaterialAlertDialog.Button.Negative
        </item>
    </style>

    <style name="AppMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="cardElevation">@dimen/tiny_margin</item>
        <item name="cardCornerRadius">@dimen/default_margin_alt</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="AppMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.HEBF.Headline6</item>
        <item name="cornerRadius">@dimen/medium_margin</item>
    </style>

    <style name="AppMaterialButtonFlatColored" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.HEBF.Headline6</item>
        <item name="android:textColor">@color/material_flat_button_colored_text</item>
        <item name="cornerRadius">@dimen/medium_margin</item>
    </style>

    <style name="AppMaterialButtonFlat" parent="AppMaterialButtonFlatColored">
        <item name="android:textColor">@color/material_flat_button_text</item>
    </style>

    <style name="AppMaterialButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/medium_margin</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/small_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/medium_margin</item>
        <item name="android:paddingRight">@dimen/medium_margin</item>
    </style>

    <style name="AppInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="fontFamily">@font/cairo_semibold</item>
        <item name="android:fontFamily">@font/cairo_semibold</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="AppDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fragment_open_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_close_exit</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:layout">@layout/app_dialog_layout</item>
        <item name="backgroundInsetStart">@dimen/big_margin</item>
        <item name="backgroundInsetTop">@dimen/mtrl_alert_dialog_background_inset_top</item>
        <item name="backgroundInsetEnd">@dimen/big_margin</item>
        <item name="backgroundInsetBottom">@dimen/mtrl_alert_dialog_background_inset_bottom</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog.Button.Positive" parent="@style/AppMaterialButton">
        <item name="cornerRadius">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog.Button.Negative" parent="@style/AppMaterialButtonFlat">
        <item name="cornerRadius">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheet</item>
    </style>

    <style name="AppBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearanceOverlay</item>
    </style>

    <style name="AppShapeAppearance.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/app_bottom_sheet_bg</item>
    </style>

    <style name="CardTitle">
        <item name="android:textAppearance">@style/TextAppearance.HEBF.Headline6</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CardTitleSmall">
        <item name="android:textAppearance">@style/TextAppearance.HEBF.Subtitle1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="RightLeadCheckBox">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:textAppearance">@style/TextAppearance.HEBF.Body1</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="SingleLineText">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>